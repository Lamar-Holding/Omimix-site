{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "roots": ["<rootDir>"],
  "testMatch": ["**/__tests__/**/*.test.ts", "**/__tests__/**/*.test.tsx"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "collectCoverageFrom": [
    "**/*.{ts,tsx}",
    "!**/*.d.ts",
    "!**/node_modules/**",
    "!**/.next/**",
    "!**/coverage/**",
    "!**/dist/**"
  ],
  "testPathIgnorePatterns": ["/node_modules/", "/.next/"]
}
